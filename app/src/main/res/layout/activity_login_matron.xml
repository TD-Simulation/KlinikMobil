<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/inputKodMatron"
        android:drawableLeft="@drawable/ic_tel_matrone"
        android:hint="Nimewo telefÃ²n ou"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#999"
        android:inputType="phone" />

    <Button
        android:layout_width="124dp"
        android:layout_height="59dp"
        android:layout_marginTop="30dp"
        android:text="Konekte"
        android:id="@+id/button"
        android:background="@drawable/selector"
        android:layout_gravity="left|center_horizontal"
        android:onClick="onKonekt"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp" />
    <Button
        android:layout_width="124dp"
        android:layout_height="59dp"
        android:layout_marginTop="-60dp"
        android:text="Kreye kont"
        android:id="@+id/kreye"
        android:background="@drawable/selector"
        android:layout_gravity="center_horizontal|right"
        android:onClick="onKreye"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="wap chanje nimewo telefon"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#00552E"
        android:clickable="true"
        android:onClick="onOubliMatron" />

</LinearLayout>