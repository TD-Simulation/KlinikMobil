<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tv_firstname"
        android:id="@+id/tvFirstname"
        android:layout_weight="0.05"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvPhone"
        android:layout_alignStart="@+id/tvPhone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tv_lastname"
        android:id="@+id/tvLastname"
        android:layout_weight="0.05"
        android:layout_below="@+id/tvFirstname"
        android:layout_alignLeft="@+id/tvFirstname"
        android:layout_alignStart="@+id/tvFirstname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tv_phone"
        android:id="@+id/tvPhone"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05"
        android:layout_below="@+id/tvLastname"
        android:layout_toRightOf="@+id/ibPhone"
        android:layout_toEndOf="@+id/ibPhone"
        android:layout_alignBottom="@+id/ibPhone"
        android:onClick="onIm" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibPhone"
        android:background="@drawable/ic_phone"
        android:layout_below="@+id/tvLastname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onIm" />

</RelativeLayout>